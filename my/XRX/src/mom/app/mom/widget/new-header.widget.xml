<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<xrx:widget xmlns:xrx="http://www.monasterium.net/NS/xrx" xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:i18n="http://www.monasterium.net/NS/i18n"
    xmlns:xf="http://www.w3.org/2002/xforms">
    <xrx:id>tag:www.monasterium.net,2011:/mom/widget/new-header</xrx:id>
    <xrx:author>jochen.graf@uni-koeln.de</xrx:author>
