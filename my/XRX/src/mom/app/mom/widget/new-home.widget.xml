  <xrx:variables>
    <xrx:variable>
      <xrx:name>$whome:htdoc-entry</xrx:name>
      <xrx:expression>htdoc:get('tag:www.monasterium.net,2011:/mom/htdoc/home')</xrx:expression>
    </xrx:variable>
    <xrx:variable>
      <xrx:name>$whome:htdoc-title</xrx:name>
      <xrx:expression>htdoc:title($whome:htdoc-entry)/text()</xrx:expression>
    </xrx:variable>
    <xrx:variable>
      <xrx:name>$whome:htdoc-atomid</xrx:name>
      <xrx:expression>$whome:htdoc-entry/atom:id/text()</xrx:expression>
    </xrx:variable>
    <xrx:variable>
      <xrx:name>$whome:statistics</xrx:name>
      <xrx:expression>mom:statistics()</xrx:expression>
    </xrx:variable>
  </xrx:variables>
  <xrx:portal>tag:www.monasterium.net,2011:/mom/portal/ui-new</xrx:portal>
  <xrx:init>
    <xrx:processor>
      <xrx:xformsflag>false</xrx:xformsflag>
      <xrx:jqueryflag>false</xrx:jqueryflag>
      <xrx:bootstrapflag>true</xrx:bootstrapflag>
    </xrx:processor>
  </xrx:init>
  <xrx:view>

    <main>
      <div id="banner">
        <div id="home-content" class="container-fluid">
          <span>{ $whome:htdoc-title }  </span>
          <xrx:auth>
            <xrx:rules>
              <xrx:rule>
                <xrx:user/>
                <xrx:role>html-author</xrx:role>
              </xrx:rule>
            </xrx:rules>
            <xrx:true>
              <a class="edit-link"
                href="{ conf:param('request-root') }edit-htdoc/?atomid={ $whome:htdoc-atomid }">
                <span>[</span>
                <xrx:i18n>
                  <xrx:key>edit</xrx:key>
                  <xrx:default>Edit</xrx:default>
                </xrx:i18n>
                <span>]</span>
              </a>
            </xrx:true>
            <xrx:false>
              <span/>
            </xrx:false>
          </xrx:auth>
        </div>
        <row>
          <div class="col-md-7">
            <div class="box">
              <h1>Monasterium Collaborative Archive</h1>
            { htdoc:process($whome:htdoc-entry) } </div>
          </div>

          <div class="col-md-5">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">
                  <xrx:i18n>
                    <xrx:key>currently-online</xrx:key>
                    <xrx:default>Currently online</xrx:default>
                  </xrx:i18n>
                </h5>
                <p>
                  <i class="material-icons">folder_open</i>
                  <span>{ $whome:statistics//xrx:param[@name='archives']/text() } </span>
                  <xrx:i18n>
                    <xrx:key>archives</xrx:key>
                    <xrx:default>archives</xrx:default>
                  </xrx:i18n>
                </p>
                <p>
                  <i class="material-icons">folder_open</i>
                  <span>{ $whome:statistics//xrx:param[@name='fonds']/text() } </span>
                  <xrx:i18n>
                    <xrx:key>fonds</xrx:key>
                    <xrx:default>fonds</xrx:default>
                  </xrx:i18n>
                </p>
                <p>
                  <i class="material-icons">folder_open</i>
                  <span>{ $whome:statistics//xrx:param[@name='collections']/text() } </span>
                  <xrx:i18n>
                    <xrx:key>collections</xrx:key>
                    <xrx:default>collections</xrx:default>
                  </xrx:i18n>
                </p>
                <p>
                  <i class="material-icons">folder_open</i>
                  <span>{ $whome:statistics//xrx:param[@name='charters']/text() } </span>
                  <xrx:i18n>
                    <xrx:key>charters</xrx:key>
                    <xrx:default>charters</xrx:default>
                  </xrx:i18n>
                </p>
                <p>
                  <i class="material-icons">folder_open</i>
                  <span>{ $whome:statistics//xrx:param[@name='graphics']/text() } </span>
                  <xrx:i18n>
                    <xrx:key>images</xrx:key>
                    <xrx:default>images</xrx:default>
                  </xrx:i18n>
                </p>


              </div>
            </div>
            
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">
                  <xrx:i18n>
                    <xrx:key>new-fonds-online</xrx:key>
                    <xrx:default>New fonds online</xrx:default>
                  </xrx:i18n>
                </h5>
                
                { for $fond in fonds:recently-published() let $fond-name :=
                $fond//ead:did/ead:unittitle/text() let $fond-link := fond:permalink($fond) let
                $published := replace(substring-before($fond/atom:published/text(), 'T'), '-', '/')
                (: archive info :) let $archive-base-collection :=
                fond:archive-base-collection($fond) let $archive-name :=
                $archive-base-collection//eag:autform/text() return <p>
                  <a class="nobr" href="{ $fond-link }" rel="nofollow">{
                    if(string-length($fond-name) gt 30) then concat(substring($fond-name, 1, 30), '
                    ...') else $fond-name }</a>
                  <br/>
                  <span class="small-grey nobr">{ $published } - { $archive-name }</span>
                </p> }
                <a href="{ conf:param('request-root') }import-charters" class="card-link"> <i class="material-icons">cloud_upload</i><xrx:i18n>
                  <xrx:key>import-charters</xrx:key>
                  <xrx:default>Import charters</xrx:default>
                </xrx:i18n></a>
                
              </div></div>

          </div>

        </row>
      </div>
    </main>

  </xrx:view>
</xrx:widget>
